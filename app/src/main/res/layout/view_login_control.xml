<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_white">

    <ImageView
        android:id="@+id/imagem_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_app"
        android:elevation="10dp"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:layout_centerInParent="true"/>

    <LinearLayout
        android:id="@+id/box_buttons"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <TextView
            android:id="@+id/button_abre_login"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="16dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textAllCaps="true"
            android:text="Entrar"
            android:textSize="14dp"
            android:fontFamily="@font/mont"
            android:clickable="true"
            android:textColor="@color/colorWhite"
            android:background="@drawable/ripple_button_entrar"/>

        <TextView
            android:id="@+id/button_abre_cadastro"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="16dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textAllCaps="true"
            android:text="Cadastre-se"
            android:textSize="14dp"
            android:fontFamily="@font/mont"
            android:clickable="true"
            android:textColor="@color/black_header_color"
            android:background="@drawable/ripple_button_cadastrar"/>

    </LinearLayout>

</RelativeLayout>